<UserControl 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Wpf"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Sand.Fhem.Home.Modules.FhemModule.Views.FhemObjectDetails.FhemObjectReadingsView"
    prism:ViewModelLocator.AutoWireViewModel="True">

    <ListView ItemsSource="{Binding FhemService.SelectedFhemObject.Readings}">

        <ListView.View>

            <GridView>

                <GridViewColumn DisplayMemberBinding="{Binding DateTime}" Header="DateTime" />
                <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" />
                <GridViewColumn DisplayMemberBinding="{Binding Value}" Header="Value" />

            </GridView>
            
        </ListView.View>
        
    </ListView>

</UserControl>